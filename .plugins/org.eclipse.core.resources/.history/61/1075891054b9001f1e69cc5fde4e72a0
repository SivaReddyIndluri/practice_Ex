package com.Automobileapplication.Inventoryservice.service;

import java.util.List;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.Automobileapplication.Inventoryservice.entity.Inventory;
import com.Automobileapplication.Inventoryservice.repo.InventoryRepository;

@Service
public class InventoryService {
    @Autowired
    private InventoryRepository inventoryRepository;

    // Get all inventory records
    public List<Inventory> getAllInventories() {
        return inventoryRepository.findAll();
    }

    // Get inventory by automobile ID
    public Inventory getInventoryByAutomobileId(Long automobileId) {
        return inventoryRepository.findByAutomobileId(automobileId);
    }

    // Get total quantity in inventory
    public int getTotalQuantity() {
        return inventoryRepository.findAll().stream().mapToInt(Inventory::getQuantity).sum();
    }

    // Create a new inventory record
    public Inventory createInventory(Inventory inventory) {
        return inventoryRepository.save(inventory);
    }

    // Update an existing inventory record
    public Inventory updateInventory(Long id, Inventory updatedInventory) {
        Inventory existingInventory = inventoryRepository.findById(id).orElse(null);
        if (existingInventory != null) {
            existingInventory.setQuantity(updatedInventory.getQuantity());
            existingInventory.setAutomobileId(updatedInventory.getAutomobileId());
            return inventoryRepository.save(existingInventory);
        }
        return null;
    }

    // Delete an inventory record
    public void deleteInventory(Long id) {
        inventoryRepository.deleteById(id);
    }

}
