package pallyTechPractice;

import java.lang.reflect.Array;
import java.util.Arrays;
import java.util.Comparator;
import java.util.List;
import java.util.Optional;

public class BiggestNum {
	
	public void m1() {
		List<Integer> list =  Arrays.asList(12,43,5,34,87,86);
		 Optional<Integer> li =  list.stream().sorted(Comparator.reverseOrder()).findFirst();
		 if(li.isPresent()) {
			 System.out.println("Biggest value is "+ li);
		 }
		 li.get();
	}
	public static void main(String[] args) {
		BiggestNum ss = new BiggestNum();
		ss.m1();
	}

}
